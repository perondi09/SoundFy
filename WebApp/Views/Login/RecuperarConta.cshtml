@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Recuperar Conta";
}

<div class="telas-inicias">
    <h1>Recuperar Conta</h1>
    <p>Digite seu email para receber um código de recuperação.</p>

    <form id="formRecuperarConta">
        <div class="input-telas-inicias">
            <input type="email" id="email" name="email" required placeholder="Email" />
        </div>

        <div id="loadingEmail" class="loading">
            <div class="spinner"></div>
            <div class="loading-text">Enviando código...</div>
        </div>

        <div class="botoes-telas-inicias">
            <button type="button" id="btnEnviarEmail">Enviar código</button>
            <a href="@Url.Action("Index", "Login")">Voltar para o login</a>
        </div>

        <div id="mensagemEmail" class="alert alert-info" style="display: none;"></div>
    </form>
</div>