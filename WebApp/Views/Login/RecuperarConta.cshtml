@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Recuperar Conta";
}

@using (Html.BeginForm("RecuperarConta", "Login", FormMethod.Post))
{
    <div class="telas-inicias">
        <h1>Recuperar Conta</h1>
        <p>
            Digite seu email para receber um link de recuperação.
        </p>

        <input type="email" id="email" name="email" required />

        <div class="botoes-telas-inicias">
            <button type="submit">Enviar email</button>
            <a href="@Url.Action("Index", "Login")">Voltar para o login</a>
        </div>
    </div>
}

@if (ViewBag.Mensagem != null)
{
    <div class="alert alert-info mt-3" style="text-align:center;">
        <p>@ViewBag.Mensagem</p>
    </div>
}
