@model List<WebApp.ViewModel.UsuarioViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Administrador";
}

<link href="css/layouts/_layout.css" rel="stylesheet" />

<div class="exibir-usuarios">
    <h1>Lista de usuários</h1>
    <table class="tabela-usuarios">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Tipo</td>
                    <td>
                        <a class="botao-excluir" href="@Url.Action("Excluir", "Administrador", new { id = usuario.Id })"
                            onclick="return confirm('Tem certeza que deseja excluir este usuário?');">
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>