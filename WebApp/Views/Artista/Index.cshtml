@model List<WebApp.ViewModel.MusicaViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Músicas Cadastradas";
}

<link rel="stylesheet" href="~/css/pages/Artista/index.css" />

<div class="exibicao-musicas">
    <h3>Músicas cadastradas</h3>
    <div class="card-grid">
        @foreach (var musicas in Model)
        {
            <div class="musica-card">
                <div class="musica-capa">                    
                </div>
                <div class="musica-info">
                    <h4>@musicas.Titulo</h4>
                    <p><strong>Artista:</strong> @musicas.NomeArtista</p>
                    <p><strong>Gênero:</strong> @musicas.Genero</p>
                    <p><strong>Ano:</strong> @musicas.Ano</p>
                    <p><strong>Arquivo:</strong> @musicas.NomeArquivo</p>
                </div>
                <a class="botao-reproduzir"
                   href="@Url.Action("ExcluirMusica", "Artista", new { id = musicas.Id })"
                   onclick="return confirm('Tem certeza que deseja excluir esta música?');">
                    Excluir
                </a>
            </div>
        }
    </div>
    <a class="botao-reproduzir" style="margin-top:30px;display:inline-block;"
       href="@Url.Action("AdicionarMusica", "Artista")">
        Adicionar música
    </a>
</div>