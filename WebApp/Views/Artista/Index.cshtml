@model List<Data.Models.MusicaModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Músicas Cadastradas";
}

<link rel="stylesheet" href="~/css/pages/Artista/index.css"/>

<div class="exibicao-musicas">
    <h3>Músicas cadastradas</h3>

    <thead>
        <tr>
            <th>Título</th>
            <th>Artista</th>
            <th>Gênero</th>
            <th>Ano</th>
            <th>Arquivo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var musica in Model)
        {
            <tr>
                <td>@musica.Titulo</td>
                <td>@musica.NomeArtista</td>
                <td>@musica.Genero</td>
                <td>@musica.Ano</td>
                <td>@musica.NomeArquivo</td>
                <td>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("ExcluirMusica", "Artista", new { id = musica.Id })"
                        onclick="return confirm('Tem certeza que deseja excluir esta música?');">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>

    <a href="@Url.Action("AdicionarMusica", "Artista")">Adicionar música</a>
</div>