@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Adicionar Música";
}

<link rel="stylesheet" href="~/css/pages/Artista/adicionarmusica.css" />

<div class="telas-inicias">
    <h1>Adicionar Música</h1>

    @if (ViewBag.Mensagem != null)
    {
        <div class="alert alert-info">@ViewBag.Mensagem</div>
    }

    <form asp-action="CriarMusica" method="post" enctype="multipart/form-data" class="input-telas-inicias">
        <input type="text" id="titulo" name="titulo" required placeholder="Título da Música" />
        <input type="text" id="nomeArtista" name="nomeArtista" required placeholder="Nome do Artista" />
        <input type="text" id="genero" name="genero" placeholder="Gênero" />
        <input type="number" id="ano" name="ano" placeholder="Ano" />
        <input type="text" id="nomeArquivo" name="nomeArquivo" required placeholder="Nome do Arquivo" />
        <input type="file" id="arquivo" name="arquivo" accept=".mp3" required />

        <div class="botoes-telas-inicias">
            <button type="submit">Adicionar</button>
            <a href="@Url.Action("Index", "Artista")">Voltar</a>
        </div>
    </form>
</div>