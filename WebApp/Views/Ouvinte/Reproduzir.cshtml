@model Data.Models.MusicaModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Reproduzir Música";
}

<link rel="stylesheet" href="~/css/pages/Ouvinte/reproduzir.css" />

<div class="reproduzir-musica">
    <h1>@Model.Titulo</h1>

    <div class="info-musica">
        <p><strong>Artista:</strong> @Model.NomeArtista</p>
        <p><strong>Gênero:</strong> @Model.Genero</p>
        <p><strong>Ano:</strong> @Model.Ano</p>
        <p><strong>Arquivo:</strong> @Model.NomeArquivo</p>
    </div>

    <audio controls class="reprodutor" preload="metadata">
        <source src="@Url.Action("StreamAudio", "Ouvinte", new { id = Model.Id })" type="audio/mpeg" />
        Seu navegador não suporta o elemento de áudio.
    </audio>

    <a href="@Url.Action("Index", "Ouvinte")" class="botao-voltar">Voltar</a>
</div>
